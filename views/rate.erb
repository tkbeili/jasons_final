<div style="width: 450px; margin: 0 auto; padding-bottom: 30px;">
	<h1>Rate My Website</h1>
		<form role="form" action="/rating" method="post"> 
			<!--action=where method=do what -->

		  <div class="form-group">
			<label for="name">Name</label>
			<input class="form-control" type="text" id="name" placeholder="John Smith" name="name">
			<!-- name="name" "name" is the key, input is the value-->
			<!-- for="name" is linking to id="name" "name" -->
		  </div>

		  <div class="form-group">
			<label for="email">Email</label>
			<input class="form-control" type="text" id="email" placeholder="username@email.com" name="email">
		  </div>
		  <br>
		  
		  <!-- DESIGN -->
